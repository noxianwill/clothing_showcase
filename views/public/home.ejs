<!-- Hero Section -->
<section class="hero-section" style="background-image: url('/images/hero-banner.jpg');">
    <div class="container">
        <div class="hero-content text-center">
            <h1 class="display-4 mb-4">Welcome to Our Clothing Showcase</h1>
            <p class="lead mb-4">Discover the latest fashion trends and book your personal styling appointment</p>
            <a href="/book-appointment" class="btn btn-primary btn-lg">Book Appointment</a>
        </div>
    </div>
</section>

<!-- Featured Categories -->
<section class="py-5">
    <div class="container">
        <h2 class="text-center mb-5">Featured Categories</h2>
        <div class="row">
            <% categories.forEach(category => { %>
                <div class="col-md-3 mb-4">
                    <div class="card h-100">
                        <img src="/images/categories/<%= category.name.toLowerCase() %>.jpg" class="card-img-top" alt="<%= category.name %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= category.name %></h5>
                            <p class="card-text"><%= category.description %></p>
                            <a href="/gallery?category=<%= category.id %>" class="btn btn-outline-primary">View Collection</a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</section>

<!-- About Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2>About Us</h2>
                <p>Welcome to our exclusive clothing showcase. We offer a unique shopping experience with personalized styling services. Our collection features the latest trends and timeless classics.</p>
                <a href="/about" class="btn btn-primary">Learn More</a>
            </div>
            <div class="col-md-6">
                <img src="/images/about-section.jpg" alt="About Us" class="img-fluid rounded">
            </div>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h2>Contact Us</h2>
                <p>Have questions or want to schedule an appointment? Get in touch with us!</p>
                <ul class="list-unstyled">
                    <li><i class="fas fa-phone me-2"></i> (123) 456-7890</li>
                    <li><i class="fas fa-envelope me-2"></i> info@clothing-showcase.com</li>
                    <li><i class="fas fa-map-marker-alt me-2"></i> 123 Fashion Street, Style City</li>
                </ul>
                <a href="/contact" class="btn btn-primary">Contact Form</a>
            </div>
            <div class="col-md-6">
                <div class="social-links text-center">
                    <h3>Follow Us</h3>
                    <a href="#" class="me-3"><i class="fab fa-instagram fa-2x"></i></a>
                    <a href="#" class="me-3"><i class="fab fa-facebook fa-2x"></i></a>
                    <a href="#" class="me-3"><i class="fab fa-tiktok fa-2x"></i></a>
                </div>
            </div>
        </div>
    </div>
</section> 